package app; //Define o pacote da classe

import java.util.Scanner; //Importa a classe para a leitura de dados. Lendo as entradas

public class MenuApp { //Declarando a classe principal da aplicação

	public static void main(String[] args) { //Método principal, ponto de partida da aplicação
	
		Scanner scanner = new Scanner(System.in); //Cria objetos para capturar os dados digitados
		
		UsuarioService usuarioService = new UsuarioService(); // Instancia o serviço para gerenciar os usuários
		
		int opcao; // Declarando a variável que armazena a escolha do menu
		
		do { // Inicio do laço de repetição do menu
			System.out.println("======= MENU =======");
			System.out.println("1. Cadastrar Usuário");
			System.out.println("2. Listar Usuários");
			System.out.println("3. Sair");
			System.out.println("Ëscolha uma opção: ");
			
			opcao = scanner.nextInt(); // Lê a opção de escolha
			scanner.nextLine(); // Limpa o buffer do teclado
			
			switch (opcao) { // Inicia a estrutura de decisão baseada na opção
			
			case 1: // Se o usuário escolher a opção 1
				System.out.println("Digite o nome do usuário: ");
			  String nome = scanner.nextLine();
			  usuarioService.cadastrarUsuario(nome);
			break; 
			
			case 2: // Se o usuário escolher a opção 2
				usuarioService.listarUsuarios();
				break;
				
			case 3: // Se o usuário escolher a opção 3
				System.out.println("Encerrando o programa...");
				break;
				
			default:
				System.out.println("Opção inválida!Tente novamente.");
			}
			
			System.out.println(); // Repete enquanto a opção for diferente de 3
		} while (opcao != 3);
		
		 	scanner.close(); // Encerra o scanner

	}

}
